<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#D59597"
    tools:context=".Skill">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/brainstorm"
        />

    <TextView
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:text="EXPERT IN:  HTML5, CSS3, Bootstrap, Javascript, Jquery,
        AJAX, PHP, MYSQL, Laravel."
        android:layout_marginLeft="20dp"
        android:background="#D59597"
        android:padding="5dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:text="Have Knowledge In: C, JAVA, SQL, ORACLE, ELECTRONICS."
        android:background="#D59597"
        android:layout_marginLeft="20dp"
        android:padding="5dp"
        android:textStyle="bold"
        android:textSize="20sp"/>



</LinearLayout>
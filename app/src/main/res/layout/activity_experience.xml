<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#C8A5BC"
    tools:context=".Experience">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/exp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:text="Support Engineer: Connect Asia Ltd."
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="#C8A5BC"
        android:padding="5dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:text="Web Designer and Developer: Extensive Business Solution"
        android:background="#C8A5BC"
        android:layout_marginLeft="20dp"
        android:padding="5dp"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:text="Web Designer and Developer: Dayspring Ltd."
        android:textColor="#FFFFFF"
        android:padding="5dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:text="Web Designer and Developer: XEON BD"
        android:padding="5dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textSize="20sp"/>

</LinearLayout>